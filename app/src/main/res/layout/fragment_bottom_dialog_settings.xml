<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settings_bottom_sheet_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="6dp"
        android:text="@string/sozlamalar" />


    <CheckBox
        android:id="@+id/settings_arabic_text_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="Arabiy matn"
        android:checked="true"/>

    <SeekBar
        android:id="@+id/settings_arabic_text_sb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:max="32"/>

    <CheckBox
        android:id="@+id/settings_transcription_text_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="@string/transkripsiya" />

    <SeekBar
        android:id="@+id/settings_transcription_text_sb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:max="32"/>

    <CheckBox
        android:id="@+id/settings_meaning_text_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="@string/manosi"
        android:checked="true"/>

    <SeekBar
        android:id="@+id/settings_meaning_text_sb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:max="32"/>


</LinearLayout>